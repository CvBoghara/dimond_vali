<% layout("/layouts/boilerplate") -%>

<body class="flex">
    <form action="/listings" method="POST">
        <table>
            <thead>
                <tr class="fullborder">
                    <td colspan="6">
                        <button type="submit">Submit</button>
                    </td>
                </tr>
                <tr class="info-row">
                    <td colspan="3">No: <input name="listing[no]" placeholder="Enter Number" type="number" required></td>
                    <td colspan="3">Name: <input name="listing[name]" placeholder="Enter Name" type="text" required></td>
                </tr>
                <tr class="readonly">
                    <th><input type="text" value="Day" readonly></th>
                    <th><input type="text" value="A" readonly></th>
                    <th><input type="text" value="B" readonly></th>
                    <th><input type="text" value="C" readonly></th>
                    <th><input type="text" value="D" readonly></th>
                    <th><input type="text" value="E" readonly></th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 1; i <= 33; i++) { %>
                    <tr>
                        <td class="readonly"><input type="number" value="<%= i %>" readonly></td>
                        <td><input type="number" name="listing[A<%= i %>]"></td>
                        <td><input type="number" name="listing[B<%= i %>]"></td>
                        <td><input type="number" name="listing[C<%= i %>]"></td>
                        <td><input type="number" name="listing[D<%= i %>]"></td>
                        <td><input type="number" name="listing[E<%= i %>]"></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </form>
</body>
